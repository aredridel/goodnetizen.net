extends layout

append content
	- if (items.length)
		div.list
			h2 Articles
			ul
				- items.forEach(function(item) {
					li
						a(href="#{item.url}", title="#{item.title}") #{item.title}
						time #{item.time}
				- })
	- if (pages.length)
		div.list
			h2 Pages
			ul
				- pages.forEach(function(item) {
					li
						a(href="#{item.url}", title="#{item.title}") #{item.title}
						time #{item.time}
				- })

	- if (archives.length)
		div.list.archives
			h2 Archives
			ul
				- archives.forEach(function(item) {
					li
						a(href="#{item.url}", title="#{item.title}") #{item.title}
						time #{item.time}
				- })
